{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ESNext",
		"moduleResolution": "node",
		"sourceMap": true,
		"inlineSources": true,
		"declaration": true,
		"declarationMap": true,
		"noEmit": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"experimentalDecorators": true,
		"typeRoots": [
			"./node_modules/@types",
			"./source/typings",
		],

		"rootDir": "./source",
		"outDir": "./output",
	},
	"include": [
		"source/**/*.ts"
	]
}
