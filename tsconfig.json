{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"sourceMap": true,
		"outDir": "output",
		"rootDir": "source",
		"paths": {
			"*": [
				"./typings/*"
			]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		"allowJs": true,
		"watch": true
	}
}
